<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GenomeLab.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25"
                             Padding="20"
                             Background="{ StaticResource ColorBg }">

            <Button Text="Compare genomes"
                    Background="{ StaticResource ColorBox }"
                    TextColor="White"
                    Padding="10,20,10,20"
                    Clicked="Button_OnClickedToComparePage"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
